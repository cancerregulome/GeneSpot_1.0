<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3 id="group-builder-modal-label">Heatmap</h3>
</div>

<div class="modal-body" style="max-height: 800px;">
    <table class="table table-striped table-bordered table-hover table-condensed heatmap-table">
        <thead>
            <tr>
                <td>

                </td>
                {{#each column_labels}}
                <td class="vertical_cell" style="height: 100px">
                    <div class="vertical_text"><a href="#" onclick="return false;" class="grid-label">{{id}}</a></div>
                </td>
                {{/each}}
            </tr>
        </thead>
        <tbody>
            {{#each rows}}
            <tr>
                <td><a href="#" onclick="return false;" class="grid-label">{{id}}</a></td>
                {{#each values}}
                <td title="{{val}}" style="background-color: {{col}}"></td>
                {{/each}}
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>

<div class="modal-footer">
    <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
</div>
